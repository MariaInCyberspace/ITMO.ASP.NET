@model StudentManagement.Models.Record
@{
    ViewBag.Title = "Add Grades";
}

<h2>Add Grades</h2>

@using (Html.BeginForm())
{
<div>

    <table class="table">
        <tr>
            <th>
                @Html.LabelFor(record => record.CourseId)
            </th>
            <td>
                @Html.DropDownList("CourseId")
                @Html.ValidationMessageFor(record => record.CourseId)
            </td>
        </tr>
        <tr>
            <th>
                @Html.LabelFor(record => record.StudentId)
            </th>
            <td>
                @Html.DisplayFor(record => record.StudentId)
            </td>
        </tr>
        <tr>
            <th>
                @Html.Label("Student Name")
            </th>
            <td>
                @ViewBag.StudentName
            </td>
        </tr>
        <tr>
            <th>
                @Html.LabelFor(record => record.Grade)
            </th>
            <td>
                @Html.EditorFor(record => record.Grade)
                @Html.ValidationMessageFor(record => record.Grade)
            </td>
        </tr>
    </table>
        <hr/>   
    <div>
        <input type="submit" value="Add Grade" class="btn btn-primary" />
    </div>
        
    <hr/>
    <div>
        @Html.ActionLink(linkText: "Back to Student List", actionName: "All Students", controllerName: "Student")
    </div>    
  

</div>

}

